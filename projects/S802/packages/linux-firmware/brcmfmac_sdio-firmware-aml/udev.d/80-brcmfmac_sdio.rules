################################################################################
# udev rules file for loading brcmfmac_sdio-firmware
################################################################################

ACTION!="add", GOTO="end"
SUBSYSTEMS=="sdio", ATTRS{vendor}=="0x02d0", ATTRS{device}=="0xa962|0x4330", GOTO="begin"
GOTO="end"

LABEL="begin"
### Broadcom bcm43362/bcm20710a1 bluetooth device
ATTRS{device}=="0xa962", \
  ENV{brcm_device}="bcm20710a1"

### Broadcom bcm4330/bcm40183b2 bluetooth device
ATTRS{device}=="0x4330", \
  ENV{brcm_device}="bcm40183b2"

ENV{brcm_device}=="bcm*", ACTION=="add", \
  TAG+="systemd", RUN+="/bin/sh -c '/usr/bin/systemctl is-enabled brcmfmac_sdio-firmware@$env{brcm_device}.service > /dev/null; test $? -gt 0 && /usr/bin/systemctl enable brcmfmac_sdio-firmware@$env{brcm_device}.service && /usr/bin/systemctl restart brcmfmac_sdio-firmware@$env{brcm_device}.service'"

LABEL="end"
